[Unit]
Description=any-sync-consensusnode
Wants=network-online.target
After=syslog.target network.target remote-fs.target nss-lookup.target

[Service]
Type=simple
User={{ any_sync_consensusnode_user }}
Group={{ any_sync_consensusnode_group }}
AmbientCapabilities=CAP_NET_BIND_SERVICE
ExecStart=/bin/any-sync-consensusnode -c {{ any_sync_consensusnode_config_path }}/config.yml
Restart=on-failure
RestartSec=5
SyslogIdentifier=any-sync-consensusnode
StandardOutput=syslog
StandardError=syslog

[Install]
WantedBy=multi-user.target